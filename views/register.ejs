<div class="flex-fill d-flex flex-column justify-content-center">
  <div class="container col-md-4 py-2">
    <form class="card card-md" action="/register" method="POST">
      <div class="card-body bg-light">
        <h2 class="mb-2 text-center">Create new account at UTickets</h2>
      <% if(typeof message !== 'undefined' && message && message.length > 0) { %>
          <div class="alert alert-info alert-dismissible" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-md" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z"></path><circle cx="12" cy="12" r="9"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12.01" y2="16"></line></svg>
            <%= message %>
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          </div>
      <% } %>
      
        <div class="mb-1">
          <label class="form-label required">Username</label>
              <div class="input-icon mb-3">
              <span class="input-icon-addon">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z"/><circle cx="12" cy="7" r="4" /><path d="M5.5 21v-2a4 4 0 0 1 4 -4h5a4 4 0 0 1 4 4v2" /></svg>
              </span>
              <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
            </div>
        </div>
        <div class="mb-2">
          <label class="form-label required">
            Email
          </label>
                <div class="mb-3">
                  <div class="input-icon mb-3">
                    <span class="input-icon-addon">
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-md" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z"></path><rect x="3" y="5" width="18" height="14" rx="2"></rect><polyline points="3 7 12 13 21 7"></polyline></svg>
                    </span>
                    <input type="text" name="email" class="form-control" placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
                    <div class="invalid-feedback">Please add a name.</div>
                  </div>
          </div>
        </div>
        <div class="mb-2">
          <label class="form-label required">
            Phone
          </label>
               <div class="mb-3">
                  <div class="input-icon mb-3">
                  <span class="input-icon-addon">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-md" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z"></path><path d="M4 4h5l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v5a1 1 0 0 1 -1 1a16 16 0 0 1 -16 -16a1 1 0 0 1 1 -1"></path></svg>
                  </span>
                  <input type="text" name="tel" class="form-control"  placeholder="(+250) 0000-0000"  required>
                </div>
              </div>
        </div>
        <div class="mb-2">
          <label class="form-label required">
            Password
          </label>
               <div class="mb-3">
                  <div class="input-icon mb-3">
                  <span class="input-icon-addon">
                      <svg class="icon icon-md" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z"></path><rect x="5" y="11" width="14" height="10" rx="2"></rect><circle cx="12" cy="16" r="1"></circle><path d="M8 11v-4a4 4 0 0 1 8 0v4"></path></svg>
                  </span>
                  <input  type="password" name="password" placeholder="Password" class="form-control" id="password" required>
                </div>
              </div>
        </div>
        <div class="mb-2">
          <label class="form-label required">
            Confirm Password
          </label>
               <div class="mb-3">
                  <div class="input-icon mb-3">
                  <span class="input-icon-addon">
                      <svg class="icon icon-md" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z"></path><rect x="5" y="11" width="14" height="10" rx="2"></rect><circle cx="12" cy="16" r="1"></circle><path d="M8 11v-4a4 4 0 0 1 8 0v4"></path></svg>
                  </span>
                  <input  type="password" name="passConf" placeholder="Confirm password" class="form-control" id="password" required>
                </div>
              </div>
        </div>
       
        <div class="mb-1">
          <label class="form-check required">
            <input type="checkbox" class="form-check-input" required/>
            <span class="form-check-label">Agree the <a href="" tabindex="-1">terms and policy</a>.</span>
          </label>
        </div>
        <div class="form-footer">
          <button type="submit" class="btn btn-primary btn-block">Create new account</button>
        </div>
        <div class="hr-text">Or</div>
        <div class="text-center text-muted">
          Already have account? <a href="/login" tabindex="-1"><strong>Login</strong> </a>
        </div>
      </div>
    </form>
    
  </div>
</div>
